<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:cardUseCompatPadding="true"
    app:cardCornerRadius="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="15dp">
            <ImageView
                android:id="@+id/PosterPreviewFilmImageView"
                android:layout_width="40dp"
                android:layout_height="63dp"
                android:background="@color/white"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="26dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/NameFilmTextView"
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textAppearance="@style/Text.Medium.16_500"
                tools:text="Изгой-один: Звёздные воины"
                />

            <TextView
                android:id="@+id/InfoFilmTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Text.Medium.14_500"
                tools:text="Фантастика (2016)"
                android:textColor="@color/gray"
                android:layout_marginTop="8dp"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/FavoriteFilmImageView"
            android:layout_width="14.18dp"
            android:layout_height="13.49dp"
            android:layout_marginTop="27.81dp"
            android:layout_marginStart="43.91dp"
            android:src="@drawable/ic_favorites"
            android:visibility="invisible"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>